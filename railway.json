{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "project": {
    "id": "112eaa22-255c-4f61-9e19-fa30afa29e04",
    "name": "MSWD Livelihood Rizal Palawan",
    "description": "Municipal Social Welfare and Development Livelihood Program Management System"
  },
  "services": {
    "api": {
      "source": "services/api",
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300
      },
      "variables": {
        "PORT": "8000",
        "ENVIRONMENT": "production",
        "ALGORITHM": "HS256",
        "ACCESS_TOKEN_EXPIRE_MINUTES": "30"
      }
    },
    "worker": {
      "source": "services/api",
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "celery -A app.core.celery worker --loglevel=info"
      }
    },
    "frontend": {
      "source": "apps/web",
      "build": {
        "builder": "nixpacks"
      },
      "deploy": {
        "startCommand": "npm run start"
      },
      "variables": {
        "REACT_APP_API_URL": "https://mswd-api.railway.app",
        "REACT_APP_ENVIRONMENT": "production"
      }
    }
  }
}