# MSWD Livelihood Environment Template
# Copy to .env and fill with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mswd_livelihood
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mswd_livelihood
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
SECRET_KEY=generate-a-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Firebase Configuration (Get from Firebase Console)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME="MSWD Livelihood Rizal Palawan"

# API Configuration
VITE_API_BASE=http://localhost:8000/api/v1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@mswd-rizal.gov.ph